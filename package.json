{
  "name": "dressit-backend",
  "version": "1.0.0",
  "description": "Dressit Backend Service",
  "scripts": {
    "clean": "rimraf '{src}/**/*.{js,js.map}'",
    "build": "npm run tsc",
    "test": "npm run clean && npm run lint",
    "lint": "eslint ./src/**/*.ts",
    "lint:fix": "eslint ./src/**/*.ts --fix",
    "tsc": "tsc --project tsconfig.json",
    "tsc:w": "tsc --project tsconfig.json -w",
    "start:dev": "nodemon --watch \"src/**/*.ts\" --ignore \"node_modules/**/*\" --exec ts-node src/index.ts",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "docker:build": "npm build && docker-compose build"
  },
  "author": "Omer Morad",
  "license": "MIT",
  "dependencies": {
    "@sentry/node": "^5.15.5",
    "@tsed/common": "5.54.1",
    "@tsed/core": "5.54.1",
    "@tsed/di": "5.54.1",
    "@tsed/exceptions": "5.54.1",
    "@tsed/passport": "5.54.1",
    "@tsed/swagger": "5.54.1",
    "@tsed/testing": "5.54.1",
    "@tsed/typeorm": "5.54.1",
    "@types/swagger-schema-official": "2.0.20",
    "body-parser": "1.19.0",
    "compression": "1.7.4",
    "cookie-parser": "1.4.4",
    "cors": "2.8.5",
    "cross-env": "7.0.2",
    "dotenv": "^8.2.0",
    "eslint": "^7.0.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.3",
    "express": "4.17.1",
    "helmet": "^3.22.0",
    "husky": "^4.2.5",
    "method-override": "^3.0.0",
    "mysql": "^2.18.1",
    "mysql2": "^2.1.0",
    "passport": "0.4.1",
    "passport-http": "0.3.0",
    "passport-local": "1.0.0",
    "pg": "^7.4.3",
    "prettier": "^2.0.5",
    "typeorm": "0.2.24"
  },
  "devDependencies": {
    "@types/cors": "2.8.6",
    "@types/express": "4.17.3",
    "@types/http-proxy": "^1.16.2",
    "@types/node": "13.9.1",
    "@types/passport": "1.0.3",
    "@types/passport-http": "0.3.8",
    "@types/passport-local": "^1.0.33",
    "@types/request-promise": "^4.1.42",
    "@types/supertest": "2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/parser": "^2.33.0",
    "concurrently": "5.1.0",
    "lint-staged": "^10.2.4",
    "nodemon": "1.19.1",
    "rimraf": "^2.6.2",
    "supertest": "4.0.2",
    "ts-node": "8.6.2",
    "typescript": "3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix"
    ],
    "*.{md,yml,yml,json}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/omer-morad-ni/dressit-backend.git"
  }
}
